<% provide :title, t(".title") %>
<h1 class="text-center"><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:password_reset, url: password_reset_path(params[:id]), method: "put") do |f| %>
      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
        <%= f.label :password, t(".password") %>
        <%= f.password_field :password, class: "form-control", require: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirm, t(".password_comfirm") %>
        <%= f.password_field :password_confirm, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t(".title"), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
